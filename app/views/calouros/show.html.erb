<%- model_class = Calouro -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Perfil" %></h1>
</div>

<div class= "container-fluid">
	<div class="row">
  		<div class="col-md-2"></div>
  		<div class = "col-md-8">
  			<div class="panel panel-default">
          		<div class="panel-heading">
            		<h3 class="panel-title"><%= @calouro.pessoa.nome %></h3>
          		</div>
          	<div class="panel-body">
          		<div class="row">
          			<div class="col-md-4">
			            <div class="thumbnail">
			            	<%= image_tag("perfil.jpg", size: "150x150", alt: "foto do perfil", class: "img-circle") %>
				              <div class="caption ">
				                <p class="lead" style="font-size:20px; text-align:center;">
				                  <%= model_class.model_name.human.titleize %>
				                </p>
				              </div>
			            </div>
			        </div>
      				<div class="col-md-8">
                <ul class="list-group">
                  <li class="list-group-item">
                    <strong>Usuário:</strong>
                    <%= @calouro.user.username %>
                  </li>
                  <li class="list-group-item">
                    <strong>Email:</strong>
                    <%= @calouro.user.email %>
                  </li>
                  <li class="list-group-item">
                    <strong>Nome da Mãe:</strong>
                    <%= @calouro.pessoa.nome_da_mae %>
                  </li>
                  <li class="list-group-item">
                    <strong>CPF:</strong>
                    <%= @calouro.pessoa.cpf %>
                  </li>
                  <li class="list-group-item">
                    <strong>RG:</strong>
                    <%= @calouro.pessoa.rg %>
                  </li>
                  <li class="list-group-item">
                    <strong>Cor:</strong>
                    <%= @calouro.pessoa.cor.description %>
                  </li>
                  <li class="list-group-item">
                    <strong>Identidade de Gênero:</strong>
                    <%= @calouro.pessoa.identidade_de_genero %>
                  </li>
                  <li class="list-group-item">
                    <strong>Ano da Faculdade:</strong>
                    <%= @calouro.ano_faculdade %>
                  </li>
                </ul>
              </div>
      		</div>
          <div class="text-right">
            <%= link_to t('.back', :default => t("helpers.links.back")),
                          calouros_path, :class => 'btn btn-default'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_calouro_path(@calouro), :class => 'btn btn-default' %>
          </div>
        </div><!-- /panel-body -->
  		</div>
  	</div><!-- /row -->
</div><!-- /container-fluid -->
