<div class="page-header">
  <h2>Cadastro de Usuário</h2>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

</br>

  <div class= "container-fluid">
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-md-2"></div>
      <div class = "col-md-8">
        <!-- Painel Dados do Usuário -->
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Dados do Usuário</h3>
          </div>
          <div class="panel-body">
            <!-- Nome do Usuário-->
            <div class="row">
              <div class="form-group col-md-12">
                  <%= f.label "Login do Usuário", :class => 'control-label' %>
                  <div class="controls">
                    <%= f.text_field :username, :class => 'form-control' %>
                  </div>
                  <%= error_span(@user[:username]) %>
              </div>
            </div>
            <!-- Email -->
            <div class="row">
              <div class="form-group col-md-12">
                  <%= f.label "Email", :class => 'control-label' %>
                  <div class="controls">
                    <%= f.email_field :email, :class => 'form-control' %>
                  </div>
                  <%= error_span(@user[:email]) %>
              </div>
            </div>
            <!-- Senha -->
            <div class="row">
              <div class="form-group col-md-6">
                <%= f.label :Senha, :class => 'control-label' %>
                <% if @validatable %>
                  <em>(No mínimo <%= @minimum_password_length %> caracteres.)</em>
                <% end %><br />
                <div class="controls">
                  <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
                </div>
                <%= error_span(@user[:password]) %>
              </div>
              <!-- Confirmação -->
              <div class="form-group col-md-6">
                <%= f.label "Confirmação de Senha", :class => 'control-label' %>
                <% if @validatable %>
                  <em>(No mínimo <%= @minimum_password_length %> caracteres.)</em>
                <% end %><br />
                <div class="controls">
                  <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
                </div>
                <%= error_span(@user[:password_confirmation]) %>
              </div>
            </div>
            <!-- Permissão-->
            <div class="row">
              <div class="form-group col-md-12">
                  <%= f.label "Permissão", :class => 'control-label' %>
                  <div class="controls">
                    <%= f.select :role_ids, get_roles_helper, {}, {:multiple => true, :class => 'form-control', :size => 3} %>
                  </div>
                  <%= error_span(@user[:role_ids]) %>
              </div>
            </div>

          </div>
        </div>

        <div class="text-right">
          <%= f.submit "Próximo", :class => 'btn btn-primary' %>
        </div>
        <hr>
      </div>
    </div><!-- /row -->

<% end %>

